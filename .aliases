nuke_docker() {
  # Delete all containers
  docker stop $(docker ps -a -q)
  docker rm -f $(docker ps -a -q)
  # Delete all images
  docker rmi $(docker images -q)
  docker system prune
}
alias stack="cd ~/.pilot/stack/services"
alias integ="cd ~/src/intercom-integrations"
clip() {
  echo $1 | nc localhost 8377
}
alias td="tmux detach"
alias historynl="history | cut -c 8-"

dimg() {
  docker images "*$1*" --format "{{.ID}}"
}

gsha() {
  glo $1 | peco | awk '{print $1}'
}

r() {
  cd ~/src/$(ls ~/src/ | peco)
}

man() {
  vim -c "runtime! ftplugin/man.vim" -c "let g:ft_man_open_mode = 'tab'" -c ":Man $1" -c "tabonly"
}

dot() {
  vim -c ':cd ~/dotfiles' -c 'let NERDTreeShowHidden=1' -c ':NERDTreeToggle'
}

v() {
  r
  vim -c ':NERDTreeToggle'
}

vg() {
  repo=$(ls ~/src/ | peco)
  vim -c ":cd ~/src/$repo" -c 'let NERDTreeShowHidden=1' -c ':NERDTreeToggle' -c ':Gstatus' -c ':NERDTreeToggle'
}

mkscript() {
  script=$1
  touch $script
  echo "#!/usr/bin/env bash" >$script
  chmod +x $script
}

cmsg() {
  cat .git/COMMIT_EDITMSG | grep -v '^#'
}

pro() {
  hub pull-request --no-edit
}

proe() {
  hub pull-request -m "$(cmsg)" --edit
}

prls() {
  hub pr list -h $(git branch-name)
}

